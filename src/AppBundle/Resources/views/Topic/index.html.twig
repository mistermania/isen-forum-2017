{% extends "::base.html.twig" %}

{% block title %}AppBundle:Topic:index{% endblock %}

{% block body %}

        <a href="{{ path('app_post_add', {forum_id: forum.id,topic_id: topic.id}) }}">
    <button class="btn waves-effect waves-light">
        New Message<i class="material-icons right">send</i>
    </button>
    </a>

    <a href="{{ path('app_topic_remove',{forum_id:forum.id,id:topic.id}) }}">
        <button class="btn wawes-effect wawes-light red">Delete topic
            <i class="material-icons right">delete</i>
        </button>
    </a>

    <div class="row">
        <div class="col s12 m6">
            {% for post in topic.posts %}
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">By {{ post.author }} at {{ post.creation | date}}</span>
                        <p>{{ post.content }}</p>
                    </div>
                </div>
                <a href="{{ path('app_post_remove',{forum_id:forum.id,topic_id:topic.id, id: post.id}) }}">
                    <button class="btn wawes-effect wawes-light red">Delete post
                        <i class="material-icons right">delete</i>
                    </button>
                </a>
            {% endfor %}
        </div>
    </div>

{% endblock %}
